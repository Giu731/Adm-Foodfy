{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
    <link rel="stylesheet" href="/stylefoodfy.css">
{% endblock head %}

{% block header %}
<header class = "admin">
    <nav class="links">
        <a href="/" >
            <div class="logo">
                <img src="/logo_branco.png" 
                alt="logofoodfy" > 
            </div>
        </a>
    </nav>    
</header>
{% endblock header %}

{% block content %}
<main>
    <section class="recipesPage">
        <div class = "recipeHead">
            <span>Receita: {{recipe.title}}</span>
            <span><a href = "#" >Editar receita</a></span>
        </div>
        <img src="{{recipe.image}}" alt = "imagem ilustrativa da receita: {{recipe.title}}">
        <div class="cooker-info">
            <div class="title">
                <h1>{{recipe.title}}</h3>
            </div>
            <div class="author">
                <h2>{{recipe.author}}</h2>
            </div>        
        </div>
        <div class="recipe">
            <div class="ingredients">
                <h3>Ingredientes</h3>
                <ul class="recipes-info" id="ingredients-list ">
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="steps">
                <h3>Preparo</h3>
                <ul class="recipes-info" id="preparation-steps">
                    {% for step in recipe.steps %}
                        <li>{{step}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class ="information">
                {% if recipe.information %}
                    <h3>Informações</h3>
                    <div class="recipes-info">
                        <p>{{recipe.information}}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
</main>
{% endblock content %}
