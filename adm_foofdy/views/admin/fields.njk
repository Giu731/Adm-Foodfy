<div class = "item" id = "recipe_Image">
    <div>Imagem da receita</div>
    <div>    
        <input
            type = "url"
            name = "image"
            value = "{{recipe.image}}"
            placeholder = "http://"
        >
    </div>
</div>
<div class = "item">
    <div>Nome da receita</div>
    <div>    
        <input
            type = "text"
            name = "title"
            value = "{{recipe.title}}"
        >
    </div>
</div>
<div class = "item">
    <div>Criador da receita</div>
    <div>    
        <input
            type = "text"
            name = "author"
            value = "{{recipe.author}}"
        >
    </div>
</div>
<div class = "item" >
    <div>Ingredientes</div>
    <div id = "ingredients">
    {% if recipe.ingredients %}
        {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
            <input 
                type="text[]"
                name="ingredients[]" 
                value= "{{ingredient}}"
            >
        </div>
        {% endfor %}

    {% else %}
        <div class="ingredient">
            <input 
                type="text[]"
                name="ingredients[]" 
                value= "{{ingredient}}"
            >
        </div>
    {% endif %}
    
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>
<div class = "item" >
    <div>Modo de preparo</div>
    <div id = "steps">
    {% if recipe.steps %}
    {% for step in recipe.steps %}
        <div class="step">
            <input 
                type="text[]"
                name="steps[]" 
                value="{{step}}" 
            >
        </div>
    {% endfor %}
    {% else %}
        <div class="step">
            <input 
                type="text[]"
                name="steps[]" 
                value="{{step}}" 
            >
        </div>
    {% endif %}
    </div>
    <button type="button" class="add-step">Adicionar novo passo</button>
</div>
<div class = "item" id = "information">
    <div>Infomações adicionais</div>
    <div>    
        <textarea name = "information">{{recipe.information}}</textarea>

    </div>
</div>